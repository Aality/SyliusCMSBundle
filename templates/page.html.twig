{% extends '@SyliusShop/shared/layout/base.html.twig' %}

        {% block title %}
            {% if page.title %}
                {{ page.title }}
            {% endif %}
        {% endblock %}

{% block metatags %}
    {% if page.metaDescription %}
        <meta name="description" content="{{ page.metaDescription }}">
    {% endif %}
{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-12 py-5">
                {{ page.content|raw }}
            </div>
        </div>
    </div>

{% endblock %}
